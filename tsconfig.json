{
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "module": "ES2020",
    "skipLibCheck": true,
    "lib": ["esnext"],
    "types": ["@types/node"],
    "sourceMap": true
  },
  "exclude": ["node_modules"]
}
